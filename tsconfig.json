{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "es6"],
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
//    "allowSyntheticDefaultImports": true, // import * as React from 'react'、import React = require('react') 或者开启这个选项
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "@types/node",
      "react",
      "jest",
      "lodash",
      "react-dom",
      "react-router-dom",
      "@mui",
    ],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src",
    "node_modules/**/*.d.ts",
    "node_modules/@types/**/*.d.ts"
  ],
}
